{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/login/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/login",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug with g++ (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/login/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/login",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", 
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build cpp"
        }
    ]
}
